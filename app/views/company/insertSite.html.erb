 <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Registrar Negocio
                        </h1>
                        

                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-lg-6">
                        <%= form_for :post do |f| %>
                        <p>
                            <%= f.label :Name %><br>
                            <%= f.text_field :Name %>

                            <%= f.label :Description %><br>
                            <%= f.text_field :Description %>

                            <%= f.submit %>
                        <% end %>

                        <form role="form" >
                            <div class="form-group">
                                <label>Nombre</label>
                                <input class="form-control">
                            </div>
                              <div class="form-group">
                                <label> Descripcion del Negocio</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>

                              <div class="form-group">
                                <label>Telefono</label>
                                <input class="form-control">
                            </div>
                              <div class="form-group">
                                <label>Ubicacion</label>
                                <input class="form-control">
                            </div>

                             <div class="form-group">
                                <label>Tipo de actividad</label>
                                <select class="form-control">
                                    <option></option>
                                    <option>Actividades Extremas</option>
                                    <option>Restaurantes</option>
                                    <option>Actividades nocturnas</option>
                                    
                                </select>
                            </div>

                            <div class="form-group">
                                <label> Subir Fotografia</label>
                                <input type="file">
                            </div>
                             <button type="submit" class="btn btn-info">Guardar</button>
                        </form>                            
                    </div>

                <div class="col-lg-6">
                <div class="thumbnail">
                 <%= image_tag "casa.png" %>
                 </div>

                </div>
                <!-- /.row -->


            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
        </div>
        </div>
        </div>