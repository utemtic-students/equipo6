 <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Registrar Negocio
                        </h1>
                        

                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <%= form_for :postSite do |f| %>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <%= f.label :Nombre %>:<br>
                                <%= f.text_field :Name,:class=>"form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label :Descripción %>:<br>
                                <%= f.text_field :Description ,:class=>"form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label :Teléfono %>:<br>
                                <%= f.text_field :TelNumber ,:class=>"form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label :Municipio %>:<br>
                                <%= f.text_field :Municipality ,:class=>"form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label :Estado %>:<br>
                                <%= f.text_field :State ,:class=>"form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.label :Colonia %>:<br>
                                <%= f.text_field :Colony ,:class=>"form-control" %>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-6 ">
                                    <%= f.label :Numero_Exterior %>:<br>
                                    <%= f.text_field :OutdoorNumber ,:class=>"form-control" %>
                                </div>
                                <div class="col-lg-6 ">
                                    <%= f.label :Numero_Interior %>:<br>
                                    <%= f.text_field :IndoorNumber ,:class=>"form-control" %>
                                </div>
                            </div>
                            <div id="map"></div>

                            <br><br>
                            <%= f.submit :Siguiente ,:class=>"btn btn-info" %>
                        </div>

                        <div class="col-lg-6">
                            <div class="thumbnail">
                                <%= image_tag "casa.png" %>
                            </div>
                            
                           
                        </div>
                        <!-- /.row -->
                    <% end %>
                </div>
                <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
        </div>
        </div>
        </div>
     
