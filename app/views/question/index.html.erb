<div class="col-md-12  " >
    <center><h2>Selecciona las imagenes con las que te identifiques</h2></center>
    <% @questions.each do |question| %>
    <center><h3><strong><%= question.Question %></strong></h3></center>
    <% end %>
</div>
 <!--start-->
<%= form_tag({:controller => @fin != 1 ? 'question' : 'turist' , :action => "index"}, :method => "post") do %>
    <div>
        <%= text_field_tag :inputHidden, :inputHidden %>
        <%= text_field_tag :questions_id, @questions_id + 1, :type=>"hidden"%>
        <%= text_field_tag :answers_id, @answers_id , :type=>"hidden"%>
        <%= text_field_tag :answers_sec, @answers_sec , :type=>"hidden"%>
        <%= text_field_tag :answers_del, @answers_del , :type=>"hidden"%>
        <%= text_field_tag :allQuest, @allQuest , :type=>"hidden"%>
    </div>
    <div style="padding:5px 0;">
        <div id="thumbnail-slider">
            <div class="inner">
                <ul>
                    <% @answers.each do |answer| %>
                        <li>
                            <button type="button" class="btn btn-primary btn-radio"><%= answer.Body%></button>
                            <%= check_box_tag answer.Body, answer.id, answer.id, :disabled=>"true" %>
                            
                            <%= image_tag  answer.SRC, :class=>"img-responsive img-radio thumb" %>
                        </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
        <%= submit_tag "Siguiente" , :class=>"btn btn-primary btn-lg btn-block"%>
<% end %>
<div class="container">
    <hr>
    <!-- Footer -->
