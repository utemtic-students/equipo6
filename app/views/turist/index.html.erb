</div>
<div class="container">
    <div class="row">
        <div class="col-md-3  " >
            <center><h2>Estos lugares</h2></center>
            <center><h3><strong>"Podrian gustarte"</strong></h3></center>
        </div>

        <br>
        
        <div class="col-md-9">
            <div class="row">
                <% cont = 0 %>
                <% @sites.each do |site| %>
                    <%  cont = cont + 1 %>
                    <div class="col-sm-12 col-md-6">
                        <div class="thumbnail">
                            <%= image_tag  site.SRC%>
                            <div >
                                <br> 
                                
                                <h3 id="titulo" class="description">
                                    <%= link_to site.Name, {:controller => "detail", :action => "index", :site_id => site.id}%>
                                </h3>
                                <hr>
                                <h4 class="description">
                                  <p class="text-justify"> <%= site.Description%> </p>
                              </h4>
                              <h5 class="description">
                                <p>
                                    <a  href=""><strong>Actividades Extrema</strong></a><br>
                                </p>
                                <p>
                                    <a  href=""> Categoria - <strong>Tour</strong></a><br>
                                </p>
                            </h5>
                            <%= link_to "Ver Más", {:controller => "detail", :action => "index", :site_id => site.id }, :class=>"btn btn-primary"%>
                            </div>
                            <div class="ratings">
                                <p class="pull-right">6 reviews</p>
                                <p>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% if cont % 2 == 0 %>
                        <div class="clearfix visible-lg-block"></div>
                    <% end %>
                    
                <% end %>
            </div>
        </div>
</div>